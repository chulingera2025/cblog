html [lang="{{ site.language }}"]
  head
    meta [charset="UTF-8"]
    meta [name="viewport"] [content="width=device-width, initial-scale=1"]
    title {{ page.title }} - {{ site.title }}
    meta [name="description"] [content="{{ site.description }}"]
  body
    header
      h1
        a [href="/"] {{ site.title }}
      p {{ site.subtitle }}
      include partials/nav
    main
      slot content
    footer
      p &copy; {{ site.title }}
